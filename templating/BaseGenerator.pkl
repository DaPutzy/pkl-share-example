import "apps/TenantConfig.pkl"

tenants: Listing<TenantConfig.Item>(length > 0)

templates: Listing<TenantConfig>(isDistinctBy((it) -> it.getClass()))

output {
  files {
    for (template in templates) {
      ["generated/\(template.filename).\(template.output.renderer.extension)"] = (template) {
        tenants = module.tenants
      }.output
    }
  }
}
